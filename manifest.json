{ 
  "author": "Ling.",
	"manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["index.js"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "on-19.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "tabs",
    "*://*/*"
  ],
  "description": "Why did you update, bruh?",
  "name": "why-did-you-update",
  "version": "1.0"
}
